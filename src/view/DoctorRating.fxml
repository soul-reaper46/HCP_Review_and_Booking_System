<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1550.0" spacing="20" style="-fx-background-color: #f0f0f0; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DoctorRatingController">
    
    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Doctor Rating" />
    
    <!-- Doctor ComboBox -->
    <ComboBox fx:id="doctorComboBox" prefWidth="250" promptText="Select Doctor" />
    
    <!-- Rating Controls (Sliders for each rating) -->
    <Text style="-fx-font-size: 16px;" text="Analysis Rating:" />
    <Slider fx:id="analysisRatingSlider" blockIncrement="1" majorTickUnit="1" max="5" maxWidth="250.0" min="1" minorTickCount="0" prefHeight="55.0" prefWidth="250.0" showTickLabels="true" showTickMarks="true" value="3" />

    <Text style="-fx-font-size: 16px;" text="Treatment Rating:" />
    <Slider fx:id="treatmentRatingSlider" blockIncrement="1" majorTickUnit="1" max="5" maxWidth="250.0" min="1" minorTickCount="0" prefHeight="35.0" prefWidth="250" showTickLabels="true" showTickMarks="true" value="3" />

    <Text style="-fx-font-size: 16px;" text="Behaviour Rating:" />
    <Slider fx:id="behaviourRatingSlider" blockIncrement="1" majorTickUnit="1" max="5" maxWidth="250.0" min="1" minorTickCount="0" prefHeight="35.0" prefWidth="250" showTickLabels="true" showTickMarks="true" value="3" />

    <Text style="-fx-font-size: 16px;" text="Cost Rating:" />
    <Slider fx:id="costRatingSlider" blockIncrement="1" majorTickUnit="1" max="5" maxWidth="250.0" min="1" minorTickCount="0" prefHeight="35.0" prefWidth="250" showTickLabels="true" showTickMarks="true" value="3" />
    
    <!-- Submit Rating Button -->
    <Button fx:id="submitRatingButton" onAction="#handleSubmitButton" prefWidth="250" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Submit Rating" />

    <!-- Back Button -->
    <Button fx:id="backButton" onAction="#handleBackButton" prefWidth="250" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Back" />
</VBox>
