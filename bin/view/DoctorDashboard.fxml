<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DoctorDashboardController" fx:id="rootPane" stylesheets="@../css/style.css">
    <!-- Left Slider -->
    <left>
        <VBox id="menu" spacing="10">
            <Label id="menu-title" text="Menu" />
            <!-- <Button text="Home" fx:id="btnHome" onAction="#handleHomeClick"/> -->
            <Button text="Appointments" fx:id="btnAppointments" onAction="#handleAppointmentsClick"/>
            <Button text="Past Appointments" fx:id="btnPatients" onAction="#handlePatientsClick"/>
            <Button text="Logout" fx:id="btnLogout" onAction="#handleLogoutClick"/>
        </VBox>
    </left>

    <!-- Top Navbar -->
    <top>
        <HBox id="navbar" alignment="CENTER_LEFT">
            <Label id="navbar-title" text="Doctor's Dashboard" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <Label id="welcome-message" text="Welcome to the Doctor's Dashboard" />
    </center>
</BorderPane>
