<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1550.0" spacing="20" style="-fx-background-color: #f0f0f0; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppointmentBookingController">
    
    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Appointment Booking" />
    
    <!-- Doctor ComboBox -->
    <ComboBox fx:id="doctorComboBox" prefHeight="35.0" prefWidth="350.0" promptText="Select Doctor" />
    
    <!-- Appointment Type ComboBox -->
    <ComboBox fx:id="appointmentTypeComboBox" prefHeight="35.0" prefWidth="350.0" promptText="Select Appointment Type" />

    <!-- Patient Name Field (Non-editable) -->
    <TextField fx:id="patientName" editable="false" maxWidth="350.0" minWidth="250.0" prefHeight="35.0" prefWidth="350.0" promptText="Enter Your Name" />
    
    <!-- Patient Email Field (Non-editable) -->
    <TextField fx:id="patientEmail" editable="false" maxWidth="350.0" minWidth="250" prefHeight="35.0" prefWidth="350.0" promptText="Enter Your Email" />

    <!-- Appointment Date Picker -->
    <DatePicker fx:id="appointmentDatePicker" maxWidth="350.0" prefHeight="35.0" prefWidth="350.0" promptText="Select Appointment Date" />

    <!-- Appointment Time Field -->
    <TextField fx:id="appointmentTime" maxWidth="350.0" minWidth="250" prefHeight="35.0" prefWidth="350.0" promptText="Enter Appointment Time (HH:mm)" />

    <!-- Book Appointment Button -->
    <Button fx:id="bookAppointmentButton" onAction="#handleBookAppointment" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" styleClass="Btn" text="Book Appointment" />

    <!-- Back Button -->
    <Button fx:id="backButton" onAction="#handleBackButton" prefHeight="35.0" prefWidth="250" style="-fx-background-color: #f44336; -fx-text-fill: white;" styleClass="Btn" text="Back" />

</VBox>
